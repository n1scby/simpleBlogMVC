@model IEnumerable<nb.BlogLibrary1.Blog>

@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/learn.jpg" alt="learn" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn!                   
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/think.jpg" alt="think" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Think!                    
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/code.jpg" alt="code" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Code!
                   
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/fun.jpg" alt="dogs having fun" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Fun!                    
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <h2>Blog Entries</h2>

        @foreach (var blog in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                
               @Html.ActionLink(@blog.Title, "BlogPost", new { id = blog.Id })
            </div>

            <div class="panel-body">
                @Html.DisplayFor(model => blog.Summary)
            </div>

        </div>
            }
    
   
    <div class="col-md-4">
        </div>
    </div>
</div>
